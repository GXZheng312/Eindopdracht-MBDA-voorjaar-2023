<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- light default theme -->
    <style name="Theme.FoodNutrition.default.light" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- light theme -->
    <style name="Theme.FoodNutrition.light" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">@color/primaryColorDark</item>
        <item name="android:background">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog.Light</item>
    </style>

    <style name="AppTheme.Dialog.Light" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#212D3B</item>
        <item name="colorPrimary">#61A3D7</item>
        <item name="colorPrimaryDark">#8DB2D3</item>
        <item name="colorAccent">#61A3D7</item>
        <item name="android:textColor">@color/primaryColorDark</item>
    </style>

    <!-- dark theme -->
    <style name="Theme.FoodNutrition.dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primaryColorDark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog.Dark</item>
    </style>

    <style name="AppTheme.Dialog.Dark" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">#212D3B</item>
        <item name="colorPrimary">#61A3D7</item>
        <item name="colorPrimaryDark">#8DB2D3</item>
        <item name="colorAccent">#61A3D7</item>
    </style>
</resources>